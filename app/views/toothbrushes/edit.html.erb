<div class="container">
  <div class="form">
    <h1><%= @toothbrush.title %></h1>

    <%= simple_form_for(@toothbrush) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :status, type: 'select', collection: ['Available', 'Not Available' ]%>
      <%= f.submit "Submit", class: "btn btn-primary form-btn mb-4" %>
    <% end %>
  </div>
</div>