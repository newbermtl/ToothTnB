<div class="container">
  <div id="review-form">
    <%= simple_form_for [ @toothbrush, @review ] do |f| %>
      <%= f.input :rating, type: 'select', collection: [0, 1, 2, 3, 4, 5] %>
      <%= f.input :content %>
      <%= f.submit "Submit", class: "btn btn-primary", id: "show-btn" %>
    <% end %>
  </div>
  <button type="button" onclick="document.getElementById('review-form').style.display='block'; this.style.visibility='hidden';", class="btn btn-primary form-btn">Add a review</button>
</div>
